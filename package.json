    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-vue": "^8.0.3",
    "glob-gitignore": "^1.0.14",
    "grunt": "^1.5.3",
    "grunt-babel": "^8.0.0",
    "grunt-cli": "^1.4.3",
