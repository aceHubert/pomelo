    }
  },
  "gitHooks": {
    "commit-msg": "commitlint -e -V",
    "pre-commit": "lint-staged"
  },
  "workspaces": [
    "clients/**",
    "servers/**",
    "plugins/**",
    "themes/**",
    "packages/**"
  ],
  "packageManager": "yarn@3.2.0"
}
