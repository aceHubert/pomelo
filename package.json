{
  "name": "root",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "serve:clients": "yarn workspaces foreach -vpitR --from '@ace-pomelo/{vue-web,vue-admin}' run serve",
    "serve:servers": "yarn workspaces foreach -vpitR --from '@ace-pomelo/{identity-server,identity-api,infrastructure-api}' run start:webpack",
    "build:": "yarn build:submodules && yarn build:clients && yarn build:servers",
    "build:local": "cross-env ENV_JS=env/env.local.js BASE_URL=/ yarn build:clients && yarn build:servers",
    "build:clients": "yarn workspaces foreach -vtR --from '@ace-pomelo/{vue-web,vue-admin}' run build",
    "build:servers": "yarn workspaces foreach -vtR --topological-dev --from '@ace-pomelo/{identity-server,identity-api,infrastructure-api}' run build",
    "build:submodules": "grunt --verbose",
    "build:submodules:formily-antdv": "grunt build:formily-antdv --verbose",
    "build:submodules:formily-vant": "grunt build:formily-vant --verbose",
    "build:submodules:formily-portal-antdv": "grunt build:formily-portal-antdv --verbose",
    "build:submodules:formily-portal-vant": "grunt build:formily-portal-vant --verbose",
    "build:submodules:formily": "grunt build:formily --verbose",
    "build:submodules:formily-portal": "grunt build:formily-portal --verbose",
    "build:submodules:antdv": "grunt build:antdv --verbose",
    "build:submodules:vant": "grunt build:vant --verbose",
    "clean:submodules": "grunt clean:all --verbose",
    "lint": "yarn workspaces foreach -vpt run lint",
    "lint:fix": "yarn workspaces foreach -vpt run lint:fix",
    "lint:check": "eslint --ext .js,.jsx,.ts,.tsx,.vue --max-warnings 0 \"**/src/**\"",
    "prettier": "node ./scripts/prettier.js",
    "prettier:all": "node ./scripts/prettier.js write",
    "commit": "git-cz"
  },
  "devDependencies": {
    "@babel/cli": "^7.19.3",
    "@babel/core": "^7.19.6",
    "@babel/eslint-parser": "^7.21.8",
    "@babel/plugin-transform-runtime": "^7.19.6",
    "@babel/preset-env": "^7.19.4",
    "@babel/preset-typescript": "^7.18.6",
    "@commitlint/cli": "^12.1.4",
    "@commitlint/config-conventional": "^12.1.4",
    "@golevelup/nestjs-testing": "^0.1.2",
    "@nestjs/cli": "^10.0.0",
    "@nestjs/schematics": "^10.0.0",
    "@nestjs/testing": "^10.0.0",
    "@rollup/plugin-babel": "^5.0.0",
    "@rollup/plugin-commonjs": "~11.0.0",
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-multi-entry": "^6.0.0",
    "@rollup/plugin-node-resolve": "^7.1.3",
    "@rollup/plugin-replace": "^2.3.1",
    "@types/jest": "27.0.2",
    "@types/node": "^16.0.0",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "@vue/babel-helper-vue-jsx-merge-props": "^1.4.0",
    "@vue/babel-preset-jsx": "^1.4.0",
    "@vue/composition-api": "^1.7.0",
    "@vue/eslint-config-typescript": "^9.1.0",
    "@vue/test-utils": "^1.1.3",
    "@vue/vue2-jest": "^27.0.0-alpha.2",
    "babel-jest": "^27.0.6",
    "babel-plugin-import": "^1.13.5",
    "casual": "^1.6.2",
