{
  "name": "root",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "postinstall": "yarn workspaces foreach -vptR --from 'nestjs-jwt' --from '@pomelo/shared-web' run build",
    "serve": "concurrently 'yarn serve:core-server' 'yarn serve:h5' 'yarn serve:pc' 'yarn serve:admin'",
    "serve:h5": "yarn workspace @pomelo/portal-h5 run serve",
    "serve:pc": "yarn workspace @pomelo/portal-pc run serve",
    "serve:admin": "yarn workspace @pomelo/admin-web run serve",
    "serve:core-server": "yarn workspace @pomelo/core-server start:webpack",
    "start:core-server": "yarn workspace @pomelo/core-server start:prod",
    "build": "yarn workspaces foreach -vptR --from '@pomelo/*' run build",
    "build:core-server": "yarn workspaces foreach -vptR --from '@pomelo/core-server' run build",
    "build:admin": "yarn workspaces foreach -vptR --from '@pomelo/admin-web' run build",
    "build:portal": "yarn workspaces foreach -vptR --from '@pomelo/portal-*' run build",
    "build:prod-web": "yarn workspaces foreach -vptR --from '@pomelo/admin-web' --from '@pomelo/portal-*' run build",
    "build:submodules": "grunt --verbose",
    "build:submodules:formily-antdv": "grunt build:formily-antdv --verbose",
    "build:submodules:formily-vant": "grunt build:formily-vant --verbose",
    "build:submodules:formily-portal-antdv": "grunt build:formily-portal-antdv --verbose",
    "build:submodules:formily-portal-vant": "grunt build:formily-portal-vant --verbose",
    "build:submodules:formily": "grunt build:formily --verbose",
    "build:submodules:formily-portal": "grunt build:formily-portal --verbose",
    "build:submodules:antdv": "grunt build:antdv --verbose",
    "build:submodules:vant": "grunt build:vant --verbose",
    "clean:submodules": "grunt clean:all --verbose",
    "lint": "yarn workspaces foreach -vpt run lint",
    "lint:fix": "yarn workspaces foreach -vpt run lint:fix",
    "lint:check": "eslint --ext .js,.jsx,.ts,.tsx,.vue --max-warnings 0 \"**/src/**\"",
    "prettier": "node ./scripts/prettier.js",
    "prettier:all": "node ./scripts/prettier.js write",
    "commit": "git-cz"
  },
  "devDependencies": {
    "@babel/eslint-parser": "^7.21.8",
    "@commitlint/cli": "^12.1.4",
    "@commitlint/config-conventional": "^12.1.4",
    "@types/jest": "27.0.2",
    "@types/node": "^16.0.0",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "@vue/composition-api": "^1.7.0",
    "@vue/eslint-config-typescript": "^9.1.0",
    "@vue/test-utils": "^1.1.3",
    "@vue/vue2-jest": "^27.0.0-alpha.2",
    "babel-jest": "^27.0.6",
    "babel-plugin-import": "^1.13.5",
    "casual": "^1.6.2",
    "cli-color": "^2.0.3",
    "compression-webpack-plugin": "^10.0.0",
    "concurrently": "^7.3.0",
    "copy-webpack-plugin": "^11.0.0",
    "cross-env": "^7.0.3",
    "cz-conventional-changelog-zh": "^0.0.2",
    "eslint": "^8.0.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-import-resolver-typescript": "^3.5.5",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-jest": "^23.8.2",
    "eslint-plugin-local": "^1.0.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-vue": "^8.0.3",
    "glob-gitignore": "^1.0.14",
    "grunt": "^1.5.3",
    "grunt-cli": "^1.4.3",
    "grunt-contrib-clean": "^2.0.1",
    "grunt-run": "^0.8.1",
    "grunt-submodule": "^0.1.0-rc3",
    "html-webpack-tags-plugin": "^3.0.2",
    "jest": "^27.0.2",
    "less": "^3.11.3",
    "less-loader": "^6.0.0",
    "lint-staged": "^10.0.7",
    "nodemon": "^2.0.21",
    "postcss-less": "^6.0.0",
    "postcss-pxtorem": "^6.0.0",
    "prettier": "^2.7.1",
    "rimraf": "^3.0.2",
    "terser": "^5.14.2",
    "ts-jest": "^27.1.2",
    "ts-loader": "^9.2.3",
    "ts-node": "^10.7.0",
    "typescript": "^4.1.5",
    "vue": "^2.6.10",
    "vue-template-compiler": "~2.6.10",
    "yorkie": "^2.0.0"
  },
  "resolutions": {
    "vue": "~2.6.x",
    "vue-server-renderer": "~2.6.x",
    "vue-template-compiler": "~2.6.x"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog-zh"
    }
  },
  "gitHooks": {
    "commit-msg": "commitlint -e -V",
    "pre-commit": "lint-staged"
  },
  "workspaces": [
    "web-apps/**",
    "backend-apps/**",
    "packages/**"
  ],
  "packageManager": "yarn@3.2.0"
}
