            "name": "@nestjs/swagger",
            "options": {
              "dtoFileNameSuffix": [".dto.ts", ".resp.ts"],
              "controllerKeyOfComment": "summary",
              "classValidatorShim": true,
              "introspectComments": true
            }
          },
          {
            "name": "@nestjs/graphql",
            "options": {
              "typeFileNameSuffix": [".input.ts", ".args.ts", ".model.ts"],
              "introspectComments": true
            }
          }
        ]
      }
    },
    "nestjs-oidc-identity": {
      "type": "library",
      "root": "packages/nestjs-oidc-identity",
      "entryFile": "src/index",
      "sourceRoot": "packages/nestjs-oidc-identity",
      "compilerOptions": {
        "tsConfigPath": "packages/nestjs-oidc-identity/tsconfig.json",
