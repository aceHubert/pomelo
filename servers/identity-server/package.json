{
  "name": "@ace-pomelo/identity-server",
  "version": "0.0.1",
  "description": "identity server for pomelo",
  "author": "Hubert<yi.xiang@live.cn>",
  "private": true,
  "license": "MIT",
  "scripts": {
    "start": "run -T nest start",
    "start:webpack": "run -T concurrently --raw \"grunt dev\" \"nest build --webpack --webpackPath webpack-hmr.config.js --watch\"",
    "start:debug": "run -T nest start --debug --watch",
    "start:prod": "NODE_ENV=production node dist/main",
    "build:version": "node -p \"'export const version = ' + JSON.stringify(require('./package.json').version) + ';'\" > src/version.ts",
    "build": "rimraf dist && yarn build:version && run -T grunt && run -T nest build",
    "test": "run -T jest",
    "test:watch": "run -T jest --watch",
    "test:cov": "run -T jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register ../node_modules/.bin/jest --runInBand",
    "test:e2e": "run -T jest --config ./test/jest-e2e.json"
  },
  "dependencies": {
    "@ace-pomelo/authorization": "workspace:^",
    "@ace-pomelo/ram-authorization": "workspace:^",
    "@ace-pomelo/shared": "workspace:^",
    "@apollo/server": "^4.9.1",
    "@apollo/utils.keyvaluecache": "^2.1.0",
    "@nestjs/apollo": "^11.0.0",
    "@nestjs/common": "^10.0.0",
    "@nestjs/config": "^3.2.3",
    "@nestjs/core": "^10.0.0",
    "@nestjs/graphql": "^11.0.0",
    "@nestjs/microservices": "^10.0.0",
    "@nestjs/platform-express": "^10.0.0",
    "@nestjs/sequelize": "^10.0.0",
    "@nestjs/swagger": "^7.4.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.13.2",
    "dataloader": "^2.1.0",
    "dotenv": "^16.4.5",
    "ejs": "^3.1.9",
    "express": "^4.17.1",
    "express-ejs-layouts": "^2.5.1",
    "graphql": "^16.9.0",
    "graphql-parse-resolve-info": "^4.12.0",
    "graphql-scalars": "^1.22.5",
    "jimp": "^0.22.8",
    "lodash": "^4.17.21",
    "lru-cache": "^10.2.0",
    "md5": "^2.3.0",
    "moment": "^2.29.4",
    "mysql2": "^2.3.3",
    "nest-oidc-provider": "^1.1.1",
    "nestjs-i18n": "^10.0.0",
    "oidc-provider": "^7.0.0",
    "psl": "^1.9.0",
    "redis": "^4.6.10",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^7.2.0",
    "sanitize-html": "^2.11.0",
    "sequelize": "^6.19.0",
    "tedious": "^15.1.0",
    "wildcard": "^2.0.1"
  },
  "devDependencies": {
    "@ace-pomelo/theme": "workspace:^",
    "@types/bytes": "^3.1.1",
    "@types/ejs": "^3.1.5",
    "@types/express": "^4.17.13",
    "@types/express-ejs-layouts": "^2.5.3",
    "@types/lodash": "^4.14.182",
    "@types/oidc-provider": "^7.0.0",
    "@types/psl": "^1.1.3",
    "@types/sanitize-html": "^2.9.3",
    "@types/supertest": "^2.0.11",
    "run-script-webpack-plugin": "^0.1.1",
    "source-map-support": "^0.5.20",
    "supertest": "^6.1.3",
    "tsconfig-paths": "^3.10.1",
    "webpack-node-externals": "^3.0.0"
  },
  "engines": {
    "node": ">=16"
  }
}
