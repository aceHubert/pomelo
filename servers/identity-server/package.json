{
  "name": "@ace-pomelo/identity-server",
  "version": "0.1.0.alpha.0",
  "description": "identity server for pomelo",
  "author": "Hubert<yi.xiang@live.cn>",
  "private": true,
  "license": "MIT",
  "scripts": {
    "start": "run -T nest start",
    "start:webpack": "run -T nest build --webpack --webpackPath webpack-hmr.config.js --watch",
    "start:debug": "run -T nest start --debug --watch",
    "start:prod": "NODE_ENV=production node dist/main",
    "build": "rimraf dist && run -T nest build",
    "test": "run -T jest",
    "test:watch": "run -T jest --watch",
    "test:cov": "run -T jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register ../node_modules/.bin/jest --runInBand",
    "test:e2e": "run -T jest --config ./test/jest-e2e.json"
  },
  "dependencies": {
    "@ace-pomelo/datasource": "workspace:^",
    "@ace-pomelo/shared-server": "workspace:^",
    "@ace-pomelo/theme": "workspace:^",
    "@apollo/server": "^4.9.1",
    "@apollo/utils.keyvaluecache": "^2.1.0",
    "@nestjs/apollo": "^11.0.0",
    "@nestjs/common": "^9.0.0",
    "@nestjs/config": "^2.2.0",
    "@nestjs/core": "^9.0.0",
    "@nestjs/graphql": "^11.0.0",
    "@nestjs/platform-express": "^9.0.0",
    "@nestjs/sequelize": "^9.0.0",
    "@types/express-ejs-layouts": "^2.5.3",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.13.2",
    "ejs": "^3.1.9",
    "express": "^4.17.1",
    "express-ejs-layouts": "^2.5.1",
    "jimp": "^0.22.8",
    "lodash": "^4.17.21",
    "mysql2": "^2.3.3",
    "nest-oidc-provider": "^1.1.1",
    "nestjs-i18n": "^10.0.0",
    "oidc-provider": "^7.0.0",
    "redis": "^4.6.10",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^7.2.0",
    "sanitize-html": "^2.11.0",
    "sequelize": "^6.19.0",
    "tedious": "^15.1.0"
  },
  "devDependencies": {
    "@types/ejs": "^3.1.5",
    "@types/express": "^4.17.13",
    "@types/lodash": "^4.14.182",
    "@types/oidc-provider": "^7.0.0",
    "@types/sanitize-html": "^2.9.3",
    "@types/supertest": "^2.0.11",
    "run-script-webpack-plugin": "^0.1.1",
    "source-map-support": "^0.5.20",
    "supertest": "^6.1.3",
    "tsconfig-paths": "^3.10.1",
    "webpack-node-externals": "^3.0.0"
  }
