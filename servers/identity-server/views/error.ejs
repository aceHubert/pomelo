<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1,user-scalable=0" />
    <link rel="icon" type="image/x-icon" href="<%= baseURL %>favicon.ico" />
    <link rel="shortcut icon" type="image/x-icon" href="<%= baseURL %>favicon.ico" />
    <title><%= tv('error.page_title', 'An error occurred', i18nLang) %></title>
    <link rel="stylesheet" href="<%= baseURL %>style/index.css" />
    <link rel="stylesheet" href="<%= baseURL %>style/container.css" />
  </head>
  <body>
    <main class="container">
      <div class="wrapper">
        <h1 class="title"><%= tv('error.title', 'An error occurred!', i18nLang) %></h1>
        <h2 class="subtitle"><%= tv('error.subtitle', 'Error ' + statusCode, i18nLang, { code: statusCode }) %></h2>
        <% if(Array.isArray(message)){ %>
        <ul class="description">
          <% for (const item of message) { %>
          <li><%= item %></li>
          <% } %>
        </ul>
        <% } else { %>
        <div class="description"><%= message %></div>
        <% } %>
      </div>
    </main>
  </body>
</html>
