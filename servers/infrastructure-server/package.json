{
  "name": "@ace-pomelo/infrastructure-service",
  "description": "Pomelo Infrastructure Datasource MicroService.",
  "version": "0.0.1",
  "author": "Hubert<yi.xiang@live.cn>",
  "private": true,
  "license": "MIT",
  "scripts": {
    "start": "run -T nest start",
    "start:debug": "run -T nest start --debug --watch",
    "start:webpack": "run -T nest build --webpack --webpackPath webpack-hmr.config.js --watch",
    "start:prod": "NODE_ENV=production node dist/main",
    "build:version": "node -p \"'export const version = ' + JSON.stringify(require('./package.json').version) + ';'\" > src/version.ts",
    "build": "rimraf dist && yarn build:version && run -T nest build",
    "test": "run -T jest",
    "test:watch": "run -T jest --watch",
    "test:cov": "run -T jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register ../node_modules/.bin/jest --runInBand",
    "test:e2e": "run -T jest --config ./test/jest-e2e.json"
  },
  "dependencies": {
    "@ace-pomelo/shared": "workspace:^",
    "@apollo/server": "^4.9.1",
    "@nestjs/apollo": "^11.0.0",
    "@nestjs/common": "^10.0.0",
    "@nestjs/config": "^3.2.3",
    "@nestjs/core": "^10.0.0",
    "@nestjs/mapped-types": "^2.0.5",
    "@nestjs/microservices": "^10.0.0",
    "@nestjs/swagger": "^7.4.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.13.2",
    "lodash": "^4.17.21",
    "mysql2": "^2.3.3",
    "nestjs-i18n": "^10.0.0",
    "sequelize": "^6.19.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.13",
    "@types/lodash": "^4.14.182",
    "@types/supertest": "^2.0.11",
    "run-script-webpack-plugin": "^0.1.1",
    "source-map-support": "^0.5.20",
    "supertest": "^6.1.3",
    "tsconfig-paths": "^3.10.1",
    "webpack-node-externals": "^3.0.0"
  },
  "engines": {
    "node": ">=16"
  }
}
