    "@nestjs/core": "^9.0.0",
    "@nestjs/graphql": "^11.0.0",
    "@nestjs/platform-express": "^9.0.0",
    "@nestjs/sequelize": "^9.0.0",
    "@nestjs/serve-static": "^4.0.0",
    "@nestjs/swagger": "^6.0.0",
    "@pomelo/authorization": "workspace:^",
    "@pomelo/datasource": "workspace:^",
    "@pomelo/plugin-obs": "workspace:^",
    "@pomelo/ram-authorization": "workspace:^",
    "@pomelo/shared-server": "workspace:^",
    "bytes": "^3.1.2",
