{
  "name": "@pomelo/core-server",
  "version": "1.0.0",
  "description": "core server for pomelo",
  "author": "Hubert<yi.xiang@live.cn>",
  "private": true,
  "license": "MIT",
  "scripts": {
    "start": "nest start",
    "start:webpack": "nest build --webpack --webpackPath webpack-hmr.config.js --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "NODE_ENV=production node dist/main",
    "build": "rimraf dist && nest build",
    "test": "run -T jest",
    "test:watch": "run -T jest --watch",
    "test:cov": "run -T jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register ../node_modules/.bin/jest --runInBand",
    "test:e2e": "run -T jest --config ./test/jest-e2e.json"
  },
  "dependencies": {
    "@apollo/server": "^4.9.1",
    "@apollo/utils.keyvaluecache": "^2.1.0",
