{
  "name": "@pomelo/shared",
  "description": "Nodejs shared context",
  "version": "0.1.0",
  "private": true,
  "main": "lib/index.js",
  "module": "esm/index.js",
  "types": "types/index.d.ts",
  "exports": {
    ".": {
      "types": "./types/index.d.ts",
      "import": "./esm/index.js",
      "require": "./lib/index.js"
    },
    "./*": {
      "types": "./types/*",
      "import": "./esm/*",
      "require": "./lib/*",
      "default": {
        "types": "./types/*/index.d.ts",
        "import": "./esm/*/index.js",
        "require": "./lib/*/index.js"
      }
    }
  },
  "scripts": {
    "serve": "run -T tsc --project tsconfig.build.json --module es2015 --declaration --declarationDir types --outDir esm --watch",
    "build": "run -T rimraf -rf lib esm dist types && yarn build:cjs && yarn build:esm && yarn build:types",
    "build:cjs": "run -T tsc --project tsconfig.build.json",
    "build:esm": "run -T tsc --project tsconfig.build.json --module es2015 --outDir esm",
    "build:types": "run -T tsc --project tsconfig.types.json"
  },
  "peerDependencies": {
    "@nestjs/common": "^9.0.0",
    "@nestjs/core": "^9.0.0",
    "graphql-parse-resolve-info": "^4.12.0"
  },
  "packageManager": "yarn@3.1.0"
}
