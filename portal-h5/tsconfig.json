{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "lib": ["esnext", "dom", "dom.iterable", "scripthost"],
    "jsx": "preserve",
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "noImplicitAny": false,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@pomelo/shared-web": ["../shared-web/src"],
      "@formily/vant": ["../.submodules/formily-vant/packages/components/src"],
      "@formily/vant-prototypes/esm/*": ["../.submodules/formily-vant/packages/prototypes/src"],
      "@formily-portal/vant": ["../.submodules/formily-portal-vant/packages/components/src"]
    }
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"]
}
